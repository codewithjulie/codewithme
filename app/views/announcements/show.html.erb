<% provide(:title, @announcement.title) %>

<div class="container col-8 my-5">

  <div>
    <%= link_to 'View All Announcements', course_announcements_path(@course), class: "btn btn-info mb-4" %>
  </div>

  <h1><%=@announcement.title%></h1>
  <h6 class="fw-lighter"><%= @announcement.created_at.to_date.to_formatted_s(:long) %></h6>

  <div>
    <%= simple_format(@announcement.body.gsub(/\\n/, "\n")) %>
  </div>

  <% if current_user && current_user.admin %>
    <div class="my-4">
      <div class="d-inline pr-2">
      <%= link_to 'Edit Announcement', edit_course_announcement_path(@course, @announcement), class: "btn btn-warning"%>
      </div>
      <div class="d-inline px-2">

      <%= render 'layouts/delete', object: {name: "Delete Announcement", path: course_announcement_path(@course, @announcement)} %>

    </div>
  </div>
    
  <% end %>  
</div>