<%= render 'shared/error_messages', obj: @announcement %>

<%= form_for [@course, @announcement] do |f| %>
  <div class="mb-3 required">
    <%=f.label :title, class: "form-label"%>
    <%=f.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3 required">
    <%=f.label :body, "Announcement", class: "form-label"%>
    <%= f.text_area :body, :cols => 30, :rows => 10, class: "form-control"%>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>