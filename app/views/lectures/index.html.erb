<% provide(:title, "Lectures") %>
<div class="container col-8 my-5">
  <% if current_user && current_user.admin %>
    <%= link_to 'Add New Lecture', new_course_lecture_path(@course), class: "btn btn-primary mb-4 mr-3" %>
  <% end %>
  
  <h1>All Lectures!</h1>
  <div>

    
    <% if @lectures.empty? %>
      Lectures coming soon!
    <% else %>
      <div>
      <ul class="list-group list-group-flush">
        <% @lectures.each do |lecture| %>

          <% if lecture.guest && lecture.guest.length > 1 %>
            <% guest = "| Guest Speaker: #{lecture.guest}"%>
          <% end %>
          <li class="list-group-item list-group-item-action"><%= link_to lecture.name, course_lecture_path(@course, lecture)%> <%= guest %></li>

        <% end %>
      </div>
    <% end %>
  
  </div>
  
</div>