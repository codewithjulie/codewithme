<% provide(:title, "Edit Account") %>
<div class="container my-5">
  <div class="row g-3">
    <div class="col-4 mx-auto">
      <%= link_to 'Back to My Account', user_path(@user), class: "btn btn-info mb-4"%>
      <h1>Edit My Account</h1>
      <%= form_for @user do |f| %>
        <%= render 'shared/error_messages', obj: @user %>
        <div class="mb-3 required">
          <%= f.label :username, class: "form-label" %>
          <%= f.text_field :username, class: "form-control"%>
        </div>
          <div class="mb-3 required">
          <%= f.label :email, class: "form-label" %>
          <%= f.text_field :email, class: "form-control"%>
        </div>
        <div class="mb-3 required">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3 required">
          <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <%= f.submit "Edit Account", class: "btn btn-primary"%>
      <% end %>

    </div>
  </div>
</div>
