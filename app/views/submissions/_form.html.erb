<%= render 'shared/error_messages', obj: @submission %>

<div class="mb-3">Please fill out at least one of the fields</div>
<%= form_for [@course, @assignment, @submission] do |f| %>
  <div class="mb-3">
    <%=f.label :body, class: "form-label"%>
    <%=f.text_area :body, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%=f.label :url, class: "form-label"%>
    <%= f.text_field :url, :cols => 30, :rows => 5, class: "form-control" %>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>